
<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
        <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="form-field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="form-field">
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes %>
  </div>
  <div class="form-field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="form-field">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div>
    <%= f.label :remote_image_url %><br>
    <%= f.text_field :remote_image_url %>
  </div>
  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>
  <div class="form-field">
  <%= f.submit "Save" %>
  </div>
<% end %>  
