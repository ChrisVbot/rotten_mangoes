<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)<br>
      <% if current_user.admin %>
      Signed in as admin. <%= link_to "View all users", admin_users_path %>. <%= link_to "Create user", new_admin_user_path %>
      <% end %>
    <% else %>
      <%= link_to "Log in", new_session_path %> | <%= link_to "Sign up", new_user_path %>
    <% end %>  
  </small>
</footer>

